<table class="board">
  <% (0..7).reverse_each do |column| %>
    <tr> 
      <% (0..7).each do |row| %>

        <% class_highlight = piece_in_row_and_column?(@selected_piece, column, row) ? 'highlighted' : "" %>
        <td class="<%= class_highlight %>" data-column=<%= row %> data-row=<%= column %>> <!-- this gives a col and row to table cells-->
          
          
          
        <%= link_to_piece get_piece_at_click(@game.pieces, row, column) %>

        </td>

      <% end  %>
    </tr>
  <% end %> 
</table>

<%= link_to "Forfeit", @games,  :method => :delete, data: { confirm: 'Are you sure you want to forfeit?'}, class: 'btn btn-secondary btn-lg'%>

