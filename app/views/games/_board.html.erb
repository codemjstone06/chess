
<table id="board" >
  <% (0..7).reverse_each do |column| %>
    <tr> 
      <% (0..7).each do |row| %>
      <!-- this gives a col and row to table cells-->
        <td class="class_highlight droppable" data-column="<%= column %> " data-row="<%= row %>" > 
        <% if link_to_piece get_piece(@game.pieces, row, column)  %>
          <div  class="pieces" id='<%= @piece_id %>' type='<%= @piece_type %>' color="<%= @piece_color %>" >
            <%= @piece_type %>            
          </div >
        <% end %>
        </td>
      <% end  %>
    </tr>
  <% end %> 
</table>


<div class="modal" id="promotion" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">You've been promoted!</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Choose your new piece.</p>
        <button type="button" id="Rook" class="btn btn-primary" data-dismiss="modal">Rook</button>
        <button type="button" id="Bishop" class="btn btn-primary" data-dismiss="modal">Bishop</button>
        <button type="button" id="Knight" class="btn btn-primary" data-dismiss="modal">Knight</button>
        <button type="button" id="Queen" class="btn btn-primary" data-dismiss="modal">Queen</button>
      </div>
      <div class="modal-footer">
<!--        <button type="button" class="btn btn-primary">Save changes</button> -->
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
